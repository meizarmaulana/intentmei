<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qq"
    android:orientation="vertical">

    <TextView
        android:layout_width="211dp"
        android:layout_height="68dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:text="HASIL NILAI"
        android:textColor="#C72424"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/nim_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:text="NIM"
        android:textColor="#BE2525"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nama_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="NAMA"
        android:textColor="#CA4141"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nilai_e"
        android:layout_width="46dp"
        android:layout_height="31dp"
        android:layout_marginLeft="80dp"
        android:text="NILAI"
        android:textColor="#B13D3D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="KETERANGAN"
        android:textColor="#CA3B3B"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#F3EEEE"
        android:text="BACK"
        android:textSize="18sp" />


</LinearLayout>